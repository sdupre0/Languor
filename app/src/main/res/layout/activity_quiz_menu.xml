            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/quizLv3ScoreTV"
            android:text="@string/default_score"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="@string/parantheses"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/quizLvl3MaxScoreTV"
            android:text=""
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quizLv3DescTV"
        android:layout_below="@id/quizLv3LL"
        android:text="@string/quiz_lv3_desc"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quizLv4LL"
        android:layout_below="@id/quizLv3DescTV"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/quizLv4IV"
            android:src="@drawable/languor_quiz_lv4"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="20sp"
            android:id="@+id/quizLv4Butt"
            android:text="@string/quiz_lv4_label"
            android:onClick="quizOpen"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/quizLv4ScoreTV"
            android:text="@string/default_score"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="@string/parantheses"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/quizLvl4MaxScoreTV"
            android:text=""
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quizLv4DescTV"
        android:layout_below="@id/quizLv4LL"
        android:text="@string/quiz_lv4_desc"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>
